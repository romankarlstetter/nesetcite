<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="80dp"
        android:text="@string/nesetcite"
        android:onClick="openInfo" />

    <Button
        android:id="@+id/buttonYoungpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonInfo"
        android:layout_marginRight="40dp"
        android:layout_marginTop="63dp"
        android:onClick="espaceJeunes"
        android:text="@string/espaceJeunes" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonInfo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="81dp"
        android:text="@string/espaceEntreprises" />

</RelativeLayout>
